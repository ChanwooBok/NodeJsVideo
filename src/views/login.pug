extend base

block content

    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="username" type="text" required)
        input(name="password" type="password" required)
        input(type="submit", value="login now")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=529095859ac086ef6fbd&allow_signup=false") Continue with Github &rarr;
    hr
    div
        span Don't have an account? 
        a(href="/join") Create one now &rarr; 
    

        
